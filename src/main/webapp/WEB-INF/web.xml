<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>wicket-groovy</display-name>
  <filter>
    <filter-name>GroovyClassLoaderFilter</filter-name>
    <filter-class>com.smartitengineering.demo.wicket.groovy.GroovyClassLoaderFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>GroovyClassLoaderFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>HelloWorldApplication</servlet-name>
    <servlet-class>com.smartitengineering.demo.wicket.groovy.GroovyWicketServlet</servlet-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>com.smartitengineering.demo.wicket.groovy.GroovyWicketApplication</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloWorldApplication</servlet-name>
    <url-pattern>/wicket/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
